<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <ImageView android:id="@+id/imageView" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_dashboard_item" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/imageView" android:layout_centerVertical="true">
            <TextView android:textSize="16dp" android:textColor="@color/text_color" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Akram Raja" android:fontFamily="@font/poppins_bold"/>
            <TextView android:textSize="16dp" android:textColor="@color/dark_grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16 February 1992" android:layout_below="@+id/name" android:fontFamily="@font/poppins_regular"/>
            <TextView android:textSize="16dp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="-$330" android:layout_centerVertical="true" android:fontFamily="@font/poppins_bold" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
