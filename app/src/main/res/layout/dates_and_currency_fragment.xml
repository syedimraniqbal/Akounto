<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_16ssp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_ic_ab_back_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16ssp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="6.7sp"
            android:text=" Dates &amp; Currency"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16ssp"
        android:layout_marginRight="@dimen/_16ssp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/spinnersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30ssp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_button_grey"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/datesSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="31"
                    android:padding="10dp"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16ssp"
                android:background="@drawable/rounded_corner_button_grey"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/monthsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="December"
                    android:padding="10dp"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/blackTextColor"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_16ssp"
            android:background="#e7eaf0" />

        <TextView
            android:id="@+id/businessCurrencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30ssp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="6sp"
            android:text="Business Currency"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30ssp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:lineSpacingExtra="6sp"
                android:text="USD ($) - Dollar"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tipTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_36sdp"
                android:background="@drawable/rounded_corner_grey_light"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/_10sdp"
                android:text="Tip: Used to track your business finances and create reports. You cannot change this after your business account has been created in Akounto. You can still use other currencies on invoices and have an exchange rate applied for reporting."
                android:textColor="@color/text_color_blue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/saveButton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/infoIv"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/ic_baseline_arrow_forward" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/rounded_corner_green_button"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</LinearLayout>
