<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_primary"
            android:layout_centerVertical="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/cusmoter_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textView21"
            android:src="@drawable/ic_call">

        </ImageView>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:text="+1-833-256-8686"
            android:textColor="@color/primary_color"
            android:textSize="14sp">

        </TextView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0E9FF"
        android:orientation="horizontal"
        android:padding="16dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Personal info"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/heading_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tab_right"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Business info"
                    android:textColor="@color/heading_color"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tab_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Demo"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tab_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Connect Bank"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp"></TextView>

            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/info2"
                android:textColor="@color/heading_color"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Youâ€™re almost there! Enter a few details about your business to proceed."
                android:textColor="@color/grey04"
                android:textSize="12sp"></TextView>

            <EditText
                android:id="@+id/business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/sign_in_input"
                android:fontFamily="@font/poppins_regular"
                android:hint="Business Name"
                android:textColor="@color/heading_color"
                android:textColorHint="@color/grey_20"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/business_name_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ff2a2a"
                android:lineSpacingExtra="4sp"
                android:visibility="gone"
                android:text="Please enter valid business name."/>

            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:fontFamily="@font/poppins_regular"
                android:hint="Type of business"
                android:textColor="@color/heading_color"
                android:textColorHint="@color/grey_20"
                android:textSize="16sp" />-->
            <LinearLayout
                android:id="@+id/typeBusiness_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/typeBusinessSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeBusiness" />

            </LinearLayout>
            <TextView
                android:id="@+id/type_business_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ff2a2a"
                android:lineSpacingExtra="4sp"
                android:visibility="gone"
                android:text="Please select your organisation type."
                />
           <!-- <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:fontFamily="@font/poppins_regular"
                android:hint="Select your industry"
                android:textColor="@color/heading_color"
                android:textColorHint="@color/grey_20"
                android:textSize="16sp" />-->
            <LinearLayout
                android:id="@+id/dealsWithBusiness_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/dealsWithBusinessSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dealsWith" />

            </LinearLayout>
            <TextView
                android:id="@+id/deals_with_business_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#ff2a2a"
                android:lineSpacingExtra="4sp"
                android:visibility="gone"
                android:text="Please select your industry type."
                />
           <!-- <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:fontFamily="@font/poppins_regular"
                android:hint="Country"
                android:textColor="@color/heading_color"
                android:textColorHint="@color/grey_20"
                android:textSize="16sp" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeBusiness" />

            </LinearLayout>
            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:fontFamily="@font/poppins_regular"
                android:hint="Currency"
                android:textColor="@color/heading_color"
                android:textColorHint="@color/grey_20"
                android:textSize="16sp" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/businessCurrencySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeBusiness" />

            </LinearLayout>

            <Button
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/action_primary_btn"
                android:fontFamily="@font/poppins_semibold"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
