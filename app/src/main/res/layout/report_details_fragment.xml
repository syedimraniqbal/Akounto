    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8ssp">
        <TextView android:textSize="@dimen/_14sdp" android:textColor="@color/main_blue_color" android:id="@+id/tv_net_profit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Net Profit" android:layout_centerVertical="true" android:fontFamily="@font/poppins_regular"/>
