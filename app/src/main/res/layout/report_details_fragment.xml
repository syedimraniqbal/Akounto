    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/_8ssp">
        <TextView android:textSize="@dimen/_14sdp" android:textColor="@color/text_color" android:id="@+id/tv_total_expenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Expenses" android:layout_centerVertical="true" android:fontFamily="@font/poppins_regular"/>
