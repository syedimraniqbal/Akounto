<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="TITLE HEADER"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewPaymentMode"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_tale_white_holo"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp">

                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:id="@+id/pdf_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:hint="Export"
                            android:padding="10dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/_12sdp"
                            app:spinner_arrow_gravity="start"
                            app:spinner_arrow_padding="@dimen/_4sdp"
                            app:spinner_arrow_tint="@color/teal_700"
                            app:spinner_divider_color="@color/dark_grey"
                            app:spinner_item_array="@array/export"
                            app:spinner_popup_animation="bounce"
                            app:spinner_popup_background="@color/white"
                            app:spinner_popup_elevation="@dimen/_12sdp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Sub Title"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="$ 125874522.00"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/goButton"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/minus" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Sub Title"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="$ 125874522.00"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/goButtonImg"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_equal_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Sub Title"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="$ 125874522.00"
                                android:textColor="@color/teal_700"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="As of "
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:id="@+id/accountCurrencyRel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_dark_holo">

                        <com.skydoves.powerspinner.PowerSpinnerView
                            android:id="@+id/accountCurrencySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/white"
                            android:hint="Choose"
                            android:padding="10dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/_12sdp"
                            app:spinner_arrow_gravity="end"
                            app:spinner_arrow_padding="8dp"
                            app:spinner_arrow_tint="@color/teal_700"
                            app:spinner_divider_color="@color/dark_grey"
                            app:spinner_divider_show="true"
                            app:spinner_divider_size="0.4dp"
                            app:spinner_item_array="@array/report"
                            app:spinner_popup_animation="bounce"
                            app:spinner_popup_background="@color/white"
                            app:spinner_popup_elevation="14dp" />
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_20sdp">

                        <LinearLayout
                            android:id="@+id/dateSelection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/et_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_22sdp"
                                android:background="@drawable/rounded_corner_dark_holo"
                                android:padding="@dimen/_10sdp"
                                android:text="2020-11-01"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/et_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:background="@drawable/rounded_corner_dark_holo"
                                android:padding="@dimen/_10sdp"
                                android:text="2021-01-01"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/et_from_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:background="@drawable/rounded_corner_dark_holo"
                                android:padding="@dimen/_10sdp"
                                android:text="2020-12-31"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/et_to_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:background="@drawable/rounded_corner_dark_holo"
                                android:padding="@dimen/_10sdp"
                                android:text="2021-02-28"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/btn_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_corner_button"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="Update Report"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="start"
                        app:tabMode="auto"
                        app:tabTextColor="@color/text_color" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        android:minHeight="@dimen/_250sdp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
